<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/app_normal_fontcolor11" android:startColor="@color/app_normal_fontcolor11" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="@color/app_normal_fontcolor11" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#c83c3c" android:startColor="#c83c3c" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#c83c3c" />
        </shape>
    </item>

</selector>