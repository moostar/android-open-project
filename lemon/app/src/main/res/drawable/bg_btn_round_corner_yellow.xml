<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/app_bg4"/>
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="@color/app_bg4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFD4940A"/>
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#FFD4940A" />
        </shape>
    </item>

</selector>