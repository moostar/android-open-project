<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/wechat_green" android:startColor="@color/wechat_green" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="@color/wechat_green" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/dark_wechat_green" android:startColor="@color/dark_wechat_green" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="@color/dark_wechat_green" />
        </shape>
    </item>

</selector>